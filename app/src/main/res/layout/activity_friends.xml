<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    tools:context=".Friends">

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="510dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="90dp"
                android:layout_height="81dp"
                app:srcCompat="@drawable/foto1" />

            <Button
                android:id="@+id/btnOlhoAnonimo"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/OlhoNome"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="92dp"
                android:layout_height="86dp"
                app:srcCompat="@drawable/foto2" />

            <Button
                android:id="@+id/btnSteven"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/StevenNome" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="101dp"
                android:layout_height="94dp"
                app:srcCompat="@drawable/foto3" />

            <Button
                android:id="@+id/btnGoku"
                android:layout_width="99dp"
                android:layout_height="43dp"
                android:text="@string/GokuNome" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/allerta"
        android:text="@string/Amigos"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NomedoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/allerta"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>